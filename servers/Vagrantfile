Vagrant.configure("2") do |config|

  ubuntu_box = "ubuntu/jammy64"

  # Define master VM
  config.vm.define "master" do |master|
    master.vm.box = ubuntu_box
    master.vm.hostname = "master"
    master.vm.network "private_network", ip: "192.168.50.10"
    # Specify SSH private key path
    master.ssh.private_key_path = ".ssh/master_private_key"
    
    # Optionally specify SSH public key path
    master.ssh.public_key_path = ".ssh/master_private_key.pub"
    master.vm.provider "virtualbox" do |vb|
      vb.memory = 1048
      vb.cpus = 2
    end
    master.vm.provision "shell", inline: <<-SHELL
      # Provisioning script for master
      echo "Hello from master"
    SHELL
  end

  # Define worker VMs
  (1..2).each do |i|
    config.vm.define "worker#{i}" do |worker|
      worker.vm.box = ubuntu_box
      worker.vm.hostname = "worker#{i}"
      worker.vm.network "private_network", ip: "192.168.50.1#{i + 1}"
      # Specify SSH private key path
      worker.ssh.private_key_path = ".ssh/worker#{i}_private_key"
    
      # Optionally specify SSH public key path
      worker.ssh.public_key_path = ".ssh/worker#{i}_private_key.pub"
      worker.vm.provider "virtualbox" do |vb|
        vb.memory = 1024
        vb.cpus = 1
      end
      worker.vm.provision "shell", inline: <<-SHELL
        # Provisioning script for worker#{i}
        echo "Hello from worker#{i}"
      SHELL
    end
  end

  # Define ansible-controller VM
  config.vm.define "ansible-controller" do |ansible|
    ansible.vm.box = ubuntu_box
    ansible.vm.hostname = "ansible-controller"
    ansible.vm.network "private_network", ip: "192.168.50.20"
    ansible.vm.provider "virtualbox" do |vb|
      vb.memory = 1024
      vb.cpus = 1
    end

    ansible.trigger.after :up do |trigger|
      trigger.info = "Provisioning ansible-controller after master and workers"
      trigger.run = { inline: "echo 'Provisioning ansible-controller'" }
    end
     # File provisioner to copy config.yaml from host to guest
     ansible.vm.provision "file", source: ".ssh/master_private_key", destination: "/home/vagrant/master/private_key", run: "always"
     ansible.vm.provision "file", source: ".ssh/worker1_private_key", destination: "/home/vagrant/worker1/private_key", run: "always"
     ansible.vm.provision "file", source: ".ssh/worker2_private_key", destination: "/home/vagrant/worker2/private_key", run: "always"
  end

end
